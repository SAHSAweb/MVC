@using MVC.Interfaces;
@using MVC.Models;
@using MVC.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ProductViewModel>;


@foreach (var item in Model)
{
    <h2>@item.Category</h2>
    break;
}
<button><a href="/user/user"><h3>Home</h3></a></button>
<table class="table hidden-empty-cells">
    <tr><th>Name Product</th><th>Quantity</th><th>Price</th></tr>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <tr>
                @if (item.Name != null)
                {
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <form method="get" action="/User/BuyOrder">

                    <td>
                        <input type="number" name="Quantity" placeholder="Quantity" />
                        <input type="hidden" name="Name" value="@item.Name" />
                        <input type="hidden" name="price" value="@item.Price" />
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="category" value="@item.Category" />
                    </td>
                    <td>
                        <p>
                            <input type="submit" value="BUY" />
                        </p>
                    </td>
                    </form>
                }
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">Product out of stock</td>
        </tr>
    }
</table>